<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/v11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true">
    </View>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RCB"
        android:id="@+id/button2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/v11"
        android:layout_toStartOf="@+id/v11" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KX11"
        android:id="@+id/button3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/v11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView2"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/v11"
        android:layout_alignEnd="@+id/v11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView3"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/listView2"
        android:layout_toEndOf="@+id/listView2" />


</RelativeLayout>